{
  "manifest_version":3,
  "version":"1.0",
  "name":"Simon Listens",
  "description": "Surf the web at the speed of sound",
  "icons": {
    "16": "icons/icon-2-16.png",
    "32": "icons/icon-2-32.png",
    "48": "icons/icon-2-48.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-2-256.png",
    "512": "icons/icon-2-512.png"
  },
  "permissions":["activeTab", "tabs", "storage"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "Simon_listens_placeholder.png",
    "default_title": "Click to let Simon Listen"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["key_handler.js", "record.js" ]  
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}