{
  "manifest_version":3,
  "version":"1.0",
  "name":"Simon Listens",
  "description": "Browse the web at the speed of sound",
  "permissions":["tabs", "storage"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "Simon_listens_placeholder.png",
    "default_title": "Click to let Simon Listen"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["key_handler.js"]  
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}